#include <linux/module.h>
#include <linux/init.h>
#include <linux/string.h>

static int __init string_init(void)
{
        char a[100] = "KERNEL PROGRAMMING";
        char b[100] = "KERNEL MODULE";
        char c[100] = "";
        printk(KERN_INFO"Function strlen(a): %zu",strlen(a));
        printk(KERN_INFO"Function strlen(b): %zu",strlen(b));
        printk(KERN_INFO"Function strlen(c): %zu",strlen(c));
        if(strlen(c) == 0)
        {
                printk(KERN_ALERT"Length of string C is null");
        }
        printk(KERN_INFO"String c after use strcpy(c,a): %s",strcpy(c,a));
        if(a==c)
        {
                printk(KERN_ALERT"String a is equal string c");
        }
        printk(KERN_INFO"String b after use strcpy(b,a): %s",strcpy(b,a));
        if(strcmp(a,b) == 1)
        {
                printk(KERN_INFO"String is equal");
        }
        else
        {
                printk(KERN_INFO"String is different");
        }
        printk(KERN_INFO"Function strcat(a,b): %s\n",strcat(a,b));
        return 0;
}

static void __exit string_exit(void)
{
        printk(KERN_ALERT"EXIT");
}

module_init(string_init);
module_exit(string_exit);

MODULE_LICENSE("GPL");
MODULE_AUTHOR("D.Witkowskik, M.Kujbida");
MODULE_VERSION("1.0");
MODULE_DESCRIPTION("LAB1.ZAD2");
